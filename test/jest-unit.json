{
    "moduleFileExtensions": [
        "js",
        "json",
        "ts"
    ],
    "rootDir": "..",
    "testEnvironment": "node",
    "testRegex": ".unit.spec.ts$",
    "transform": {
        "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageReporters": [
        "json-summary",
        "text",
        "lcov"
    ],
    "collectCoverageFrom": [
        "src/**"
    ]
}